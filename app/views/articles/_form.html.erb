	<%= form_for @article do |f| %>
		<div><%= f.label :name %> <%= f.text_field :name %></div>
		<div><%= f.label :content %><br/><%=f.text_area :content, :size=> "30x20" %></div>
		<div><%= f.label :author_name %></div>
		<div><%= f.text_field :author_name%></div>
		<p><%= f.submit "Save article" %></p>
	<% end %>