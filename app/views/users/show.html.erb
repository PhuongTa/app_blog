<!-- <h3><%#= @user.name %></h3> -->
<h3><%= @user.email %></h3>

<%= link_to_if(can?(:update,@user), "Edit", edit_user_path(@user)) %> |
<%= link_to_if(can?(:delete,@user),"Delete",user_path(@user), 
		:method => :delete, :confirm=> "Are you sure?") {} %>
<table class="one-colum-emphasis">
	<tbody>
		<tr>
			<td class="oce-first">Email:</td>
			<td><%= @user.email %></td>
		</tr>
		<%# if !@user.roles.empty? %> <!-- return an empty array -->
		<tr>
			<td class="oce-first">Role:</td>
			<td><%= @user.roles.first.try(:name) || "none" %></td>
		</tr>
		<%# end %>
	<% if can?(:see_timestamps,User) %>
		<tr>
			<td class="oce-first">Created at:</td>
			<td><%= @user.created_at %></td>
		</tr>
		<tr>
			<td class="oce-first">Last Sign In:</td>
			<td><%#= @user.last_sign_in_at %></td>
		</tr>
		<tr>
			<td class="oce-first">Sign In Count:</td>
			<td><%#= @user.sign_in_count %></td>
		</tr>
	<% end %>
	</tbody>
</table>