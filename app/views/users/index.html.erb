<h1>User index</h1>
<table>
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th>Roles</th>
		<th>CRUD</th>
	</tr>

<% @users.each do |user| %>
	<tr>
		<td><%#= link_to_if(can?(:read,User), "#{u.name}", user_path(u.id)) {}%></td>
		<td><%= "#{user.email}"%></td>
		<td><%= "#{user.roles.collect{ |r| r.name }}"%></td>
		<%#= link_to_if(can?(:edit,User),image_tag("/images/edit_icon.gif"),edit_user_path(u.id)) {}%> 
		<%#= link_to_if(can?(:delete,u),image_tag("/images/delete_icon.gif"),u,:confirm=> "Are you sure?",:method=>:delete) {} %>
		<td><%= link_to_if(can?(:edit,User),raw('<i class="icon-edit"></i>'),edit_user_path(user.id),) {}%> | 
		<%= link_to_if(can?(:delete,user),raw('<i class="icon-remove"></i>'),user,:confirm=> "Are you sure?",:method=>:delete) {} %></td>
	</tr>
<% end %>
</table>